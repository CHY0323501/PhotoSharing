
@{
    ViewBag.Title = "CreateComment";
}

<h2>CreateComment</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <input id="PhotoID" name="PhotoID" type="hidden" value="@ViewBag.PhotoID" />
    <div class="form-group">
        <label for="UserName">姓名：</label>
        <input id="UserName" type="text" class="form-control" name="UserName" />
    </div>
    <div class="form-group">
        <label for="Subject">主旨：</label>
        <input id="Subject" type="text" class="form-control" name="Subject" />
    </div>
    <div class="form-group">
        <label for="Body">內容：</label>
        <textarea id="Body" rows="5" cols="30" name="Body" style="resize:none" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <input id="Submit1" type="submit" value="回覆" class="btn btn-success"/>
    </div>
}
@Html.ActionLink("回首頁","Index")