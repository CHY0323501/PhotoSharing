@model IEnumerable<PhotoSharing.Models.Photo>

@foreach (var item in Model)
{
    <h2>【@item.Title】</h2>
    if (item.PhotoFile != null)
    {
        <img src="@Url.Action("GetImage","Photos",new { id=item.PhotoID})" class="img-responsive img-rounded" />
    }
    <p>
        @Html.DisplayNameFor(m => m.UserName)
        @Html.DisplayFor(m => item.UserName)
    </p>
    <p>
        @Html.DisplayNameFor(m => m.CreatedDate)
        @Html.DisplayFor(m => item.CreatedDate)
    </p>
    @Html.ActionLink("顯示詳細資料","Display",new { id=item.PhotoID})
}

