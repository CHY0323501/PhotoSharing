@model IEnumerable<PhotoSharing.Models.Comment>


@using (Ajax.BeginForm("_CommentsForPhoto", new { PhotoID = ViewBag.PhotoID }, new AjaxOptions { UpdateTargetId = "comments-tool", HttpMethod = "Post" }))
{
    <div id="comments-tool">
        <div class="well">
            <h2 class="text-danger text-center">回覆留言</h2>
            @Html.Action("_Create", "Comments", new { PhotoID = ViewBag.PhotoID })

            @foreach (var i in Model)
            {
                <div class="panel panel-warning">
                    <div class="panel-heading">
                        <h4>@i.Subject</h4>
                    </div>
                    <div class="panel-body">
                        <p>@Html.Raw(i.Body.ToString().Replace("\n", "<br>"))</p>
                    </div>
                    <div class="panel-footer">
                        回覆人：@i.UserName
                    </div>
                </div>
            }
        </div>
    </div>
}
