@model PhotoSharing.Models.Photo

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Photo</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Title)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.PhotoFile)
        </dt>

        <dd>
            @*@Html.DisplayFor(model => model.PhotoFile)*@
            <img src="@Url.Action("GetImage","Photos",new { id=Model.PhotoID})" class="img-rounded img-responsive" />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ImageMimeType)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ImageMimeType)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.CreatedDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.UserName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
        <div id="mydialog" title="Delete">
            確定執行刪除作業O_O
        </div>
    }
</div>
@section script{
    <script>
    $('.btn').click(function (e) {
        e.preventDefault();
        $('#mydialog').dialog("open");
    })
    $('#mydialog').dialog({
        autoOpen: false,
        modal: true,
        draggable: false,
        resizable: false,
        title: "是否刪除?",
        show: {
            effect: "blind",
            duration:1000
        },
        hide: {
            effect: "explode",
            duration:1000
        },
        buttons: [
            { text: "是", click: function () { $('form').submit();$(this).dialog("close") } },
            { text: "取消", click: function () { $(this).dialog("close") } }
        ]
        
    });
    </script>    
}
